    <h7>The list of attrs for this property are</h7>
      <ul>
        <li>
          <p>
           Address <%= @udprn_address %>
          </p>  
        </li>
        <li>
          <p>
            Beds: <%= @beds %>
          </p>
        </li> 
        <li>
          <p>
            Baths: <%= @baths %>
          </p>
        </li> 
        <li>
          <p>
            Receptions: <%= @receptions %>
          </p>
        </li> 
        <li>
          <p>
            Price: <%= @price %>
          </p>
