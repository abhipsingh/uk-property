        <li>
          <p>
            Assigned agent name: <%= @assigned_agent_name %>
          </p>
        </li>
        <li>
          <p>
            Assigned agent email: <%= @assigned_agent_email %>
          </p>
        </li>
        <li>
          <p>
            Assigned agent mobile: <%= @assigned_agent_mobile %>
          </p>
        </li> 
        <li>
          <p>
            Assigned agent title: <%= @assigned_agent_title %>
          </p>
        </li>
        <li>
          <p>
            Assigned agent branch name: <%= @assigned_agent_branch_name %>
          </p>
        </li>
        <li>
          <p>
            Tracking date: <%= @tracking_date %>
