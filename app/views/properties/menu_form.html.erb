      $('#main_form').find('[name=action_type]').attr('value', 'all_agents_custom');
    });
    $('#all_agents_full').click(function(e){
      $('#main_form2').find('[name=action_type]').attr('value', 'all_agents_full');
    });
    $('#first_agent_custom').click(function(e){
      $('#main_form').find('[name=action_type]').attr('value', 'first_agent_custom');
    });
    $('#first_agent_full').click(function(e){
      $('#main_form2').find('[name=action_type]').attr('value', 'first_agent_full');
    });
});
